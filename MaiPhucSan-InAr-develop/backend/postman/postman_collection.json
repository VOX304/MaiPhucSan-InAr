{
  "info": {
    "name": "Local API",
    "_postman_id": "hp-collection-2026",
    "description": "Matches Swagger endpoints: /salesmen/{employeeId}, /performance/social, /bonus/{employeeId}/compute. Includes HR+CEO logins and runner.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login HR (sets jwt + jwt_hr)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"hr\",\n  \"password\": \"Hr123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}{{apiPrefix}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiPrefix}}", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const r = pm.response.json();",
                  "const token = r.token || r.accessToken || r.data?.token || r.data?.accessToken;",
                  "pm.environment.set('jwt_hr', token);",
                  "pm.environment.set('jwt', token);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Login CEO (sets jwt_ceo)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"ceo\",\n  \"password\": \"Ceo123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}{{apiPrefix}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiPrefix}}", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const r = pm.response.json();",
                  "const token = r.token || r.accessToken || r.data?.token || r.data?.accessToken;",
                  "pm.environment.set('jwt_ceo', token);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Salesmen",
      "item": [
        {
          "name": "List Salesmen",
          "request": {
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{jwt}}", "type": "string" }] },
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}{{apiPrefix}}/salesmen/consolidated",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiPrefix}}", "salesmen", "consolidated"]
            }
          }
        },
        {
          "name": "Get Salesman by employeeId",
          "request": {
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{jwt}}", "type": "string" }] },
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}{{apiPrefix}}/salesmen/{{employeeId}}",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiPrefix}}", "salesmen", "{{employeeId}}"]
            }
          }
        }
      ]
    },
    {
