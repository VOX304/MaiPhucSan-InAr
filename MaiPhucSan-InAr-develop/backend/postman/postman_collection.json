            "body": {
              "mode": "raw",
              "raw": "{\n  \"employeeId\": \"{{employeeId}}\",\n  \"year\": 2026,\n  \"criteria\": [\n    {\"criterionId\": \"leadership\", \"target\": 5, \"actualSupervisor\": 4, \"actualPeerGroup\": 4},\n    {\"criterionId\": \"communication\", \"target\": 5, \"actualSupervisor\": 5, \"actualPeerGroup\": 5}\n  ],\n  \"remarks\": \"Roundtrip test record\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}{{apiPrefix}}/performance/social",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiPrefix}}", "performance", "social"]
            }
          }
        },
        {
          "name": "List Social Performance for salesman",
          "request": {
            "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{jwt}}", "type": "string" }] },
